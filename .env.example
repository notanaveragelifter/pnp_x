# Twitter API credentials
TWITTER_BEARER_TOKEN=

# Target account to index mentions for (without @)
TARGET_ACCOUNT=predictandpump

# Optional: where to save mentions when saving is enabled
OUTPUT_PATH=data/tweets.json

# Optional: disable cron by setting to false
MENTIONS_CRON_ENABLED=true

# Realtime polling (approx. every 15s). Set to false to disable.
MENTIONS_POLL_ENABLED=true
